# TwitterBot Framework

# Telegram Bot Token
BOT_TOKEN=your_telegram_bot_token

# (Optional) Default chat ID for notifications
TG_CHAT_ID=

# Twitter API v2 Bearer Token (read-only)
TW_BEARER_TOKEN=your_twitter_bearer_token

# Twitter OAuth 1.0a (for write operations: post/like/retweet)
TW_API_KEY=
TW_API_SECRET=
TW_ACCESS_TOKEN=
TW_ACCESS_SECRET=

# Database
DB_PATH=twitterbot.db

# Scheduler
SCHEDULER_POLL_INTERVAL=60
SCHEDULER_ENABLED=true

# Monitor
MONITOR_CHECK_INTERVAL=300
